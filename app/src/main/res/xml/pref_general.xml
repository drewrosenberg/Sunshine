<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key= "@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:key="@string/pref_temp_units_key"
        android:title="@string/pref_temp_units_label"
        android:entries="@array/TempUnits"
        android:entryValues="@array/TempUnitValues"
        android:defaultValue= "@string/temp_units_Metric"/>
            <!--"@string/temp_units_Metric"/>-->
</PreferenceScreen>
